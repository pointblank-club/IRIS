# =============================================================================
# Git LFS tracking for ML model files
# =============================================================================

# PyTorch models
*.pth filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.pth.tar filter=lfs diff=lfs merge=lfs -text

# ONNX models
*.onnx filter=lfs diff=lfs merge=lfs -text

# TensorFlow / Keras models
*.h5 filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text
*.pb filter=lfs diff=lfs merge=lfs -text
*.tflite filter=lfs diff=lfs merge=lfs -text
*.keras filter=lfs diff=lfs merge=lfs -text

# Safetensors (Hugging Face)
*.safetensors filter=lfs diff=lfs merge=lfs -text

# Checkpoint files
*.ckpt filter=lfs diff=lfs merge=lfs -text
*.ckpt.* filter=lfs diff=lfs merge=lfs -text

# Scikit-learn / Pickle models
*.pkl filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text

# Generic model files
*.model filter=lfs diff=lfs merge=lfs -text
*.weights filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text

# XGBoost / LightGBM / CatBoost
*.xgb filter=lfs diff=lfs merge=lfs -text
*.lgb filter=lfs diff=lfs merge=lfs -text
*.cbm filter=lfs diff=lfs merge=lfs -text

# MXNet
*.params filter=lfs diff=lfs merge=lfs -text

# Caffe
*.caffemodel filter=lfs diff=lfs merge=lfs -text

# Darknet / YOLO
*.weights filter=lfs diff=lfs merge=lfs -text

# CoreML
*.mlmodel filter=lfs diff=lfs merge=lfs -text
*.mlpackage filter=lfs diff=lfs merge=lfs -text

# GGML / GGUF (LLaMA, etc.)
*.ggml filter=lfs diff=lfs merge=lfs -text
*.gguf filter=lfs diff=lfs merge=lfs -text

# OpenVINO
*.xml filter=lfs diff=lfs merge=lfs -text
*.mapping filter=lfs diff=lfs merge=lfs -text

# TensorRT
*.engine filter=lfs diff=lfs merge=lfs -text
*.plan filter=lfs diff=lfs merge=lfs -text

# PaddlePaddle
*.pdmodel filter=lfs diff=lfs merge=lfs -text
*.pdiparams filter=lfs diff=lfs merge=lfs -text

# JAX/Flax
*.msgpack filter=lfs diff=lfs merge=lfs -text

# NumPy arrays (often used for model weights)
*.npy filter=lfs diff=lfs merge=lfs -text
*.npz filter=lfs diff=lfs merge=lfs -text
